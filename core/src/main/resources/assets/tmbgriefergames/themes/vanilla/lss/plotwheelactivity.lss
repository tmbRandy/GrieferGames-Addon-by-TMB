.cb-wheel {
  left: 50%;
  top: 50%;
  height: 100%;
  width: 50%;
  alignment-x: center;
  alignment-y: center;
  inner-radius: 20%;
    outer-radius: 50%;
  segment-distance-degrees: 0;
  renderer: "Wheel";
}

.plot-wheel {
  left: 50%;
  top: 50%;
  height: 100%;
  width: 39%;
  alignment-x: center;
  alignment-y: center;
  inner-radius: 10%;
  outer-radius: 25%;
  segment-distance-degrees: 0;
  renderer: "Wheel";
}

.center-container {
  left: 50%;
  top: 50%;
  width: 100;
  height: fit-content;
  alignment-x: center;
  alignment-y: center;
  border-color: white;
  //border-width: 2;

    .go-button {
    text: "Los!";
    }
}

.cb-segment {
    .cb-segment-display {
        alignment-x: center;
          alignment-y: center;
          text-color: white;
    }
}

.plot-segment {
    .plot-segment-display {
        alignment-x: center;
          alignment-y: center;

    }
}

.cb-display {
